[run]
branch = True
parallel = True
source =
    SABnzbd
    plex
    plex-api
omit =
    tests/*
    tests/fixtures/*
    tests/test_data/*
    venv/*
    .venv/*
    __pycache__/*
    planning/*
    results/*

[report]
skip_empty = True
show_missing = True
precision = 1
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.
    raise NotImplementedError
    if TYPE_CHECKING:

[html]
directory = results/coverage_html
title = Media Library Tools Coverage Report

[xml]
output = results/coverage.xml

