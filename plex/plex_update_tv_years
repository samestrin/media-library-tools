        print("‚ùå TVDB_API_KEY not found. Please provide via --tvdb-key argument, "
              "TVDB_API_KEY environment variable, or .env file", file=sys.stderr)
        sys.exit(1)
    
    # Display header
    print(f"Plex TV Show Year Updater v{VERSION}")
    print("=" * 50)
    
    if args.dry_run:
        print("üîç DRY-RUN MODE: No changes will be made")
    
    try:
        updater = TVShowYearUpdater(
            tvdb_key=tvdb_key,
            dry_run=args.dry_run,
            force=args.force,
            verbose=args.verbose,
            debug=args.debug,
            yes=args.yes
        )
        
        # TODO: Implement main processing logic in next phase
        print("üöß Tool structure created successfully!")
        print("üìã Next phase will implement TVDB API integration and directory processing.")
        
    except KeyboardInterrupt:
        print("\n‚ö†Ô∏è Operation cancelled by user")
        sys.exit(1)
    except Exception as e:
        print(f"‚ùå Error: {e}", file=sys.stderr)
        sys.exit(1)


if __name__ == '__main__':
    main()